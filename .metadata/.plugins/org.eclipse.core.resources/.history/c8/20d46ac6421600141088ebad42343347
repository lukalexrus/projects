package Test;

public class Test {

	private double a;
	private double b;
	private double c;
	
	public void Test()
	{
		a=0;
		b=0;
		c=0;
	}
	
	public boolean zero()
	{   if(b==0)
		{
			return false;
		}
		else
		{
			return true;
		}
	}
	
	public void summ(double s1,double s2){
		a=s1;
		b=s2;
		c=a+b;		
	}
	
	public void sub(double s1,double s2)
	{
		a=s1;
		b=s2;
		c=a-b;		
	}
	
	public void mul(double s1,double s2)
	
	
	{
		a=s1;
		b=s2;
		c=a*b;		
	}
	
	public void div(double s1,double s2)
	
	
	
	{
		
		a=s1;
		b=s2;
		if(zero())
		{
		 c=a/b;
		}
		else
		{
			System.out.println("Divide by zero");
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Test test=new Test();
		test.summ(3.17,5.5);
		System.out.println(test.a+" + "+test.b+" = "+test.c);
	}

}
