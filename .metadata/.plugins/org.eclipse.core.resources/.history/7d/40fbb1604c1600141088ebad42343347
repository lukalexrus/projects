	private static void formKeyPressed(java.awt.event.KeyEvent evt) {                                
        switch (evt.getKeyCode()) {
 
            case KeyEvent.VK_BACK_SPACE:
                break;
 
            case KeyEvent.VK_ENTER: //Нажата клавиша Enter
                break;
 
            default:
        }
    } 
	
	
